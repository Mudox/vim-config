" vim: filetype=vim foldmethod=marker fileformat=unix

let g:this_meta.name = expand('<sfile>:p:t')

let g:this_meta.site = 'https://github.com/SirVer/ultisnips.git'


let g:this_meta.neodict.name = g:this_meta.name


function g:this_meta.config()
    let g:UltiSnipsEditSplit           = "horizontal"
    let g:UltiSnipsExpandTrigger       = "<Tab>"
    let g:UltiSnipsJumpForwardTrigger  = "<C-F>"
    let g:UltiSnipsJumpBackwardTrigger = "<C-S>"
    let g:UltiSnipsNoPythonWarning     = 1
    let g:UltiSnipsSnippetDirectories  = [ "UltiSnips" ]
    let g:UltiSnipsSnippetsDir         = g:rc_root .
          \ '/neobundle/mdxsnippets/UltiSnips'

    cabbrev ue UltiSnipsEdit
endfunction
