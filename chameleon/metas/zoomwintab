" vim: filetype=vim foldmethod=marker fileformat=unix

let g:this_meta.site = 'https://github.com/troydm/zoomwintab.vim.git'

function g:this_meta.config()
  let g:zoomwintab_remap = 0 " no mapping to <C-W>o and <C-W><C-O>
  if has('win32') || has('win64')
    nnoremap ï :ZoomWinTabToggle<CR>
    nnoremap ï :ZoomWinTabToggle<CR>
  elseif has('mac') || has('macunix')
    nnoremap ø :ZoomWinTabToggle<CR>
    nnoremap Ø :ZoomWinTabToggle<CR>
  elseif has('unix')
    nnoremap <A-o> :ZoomWinTabToggle<CR>
    nnoremap <A-O> :ZoomWinTabToggle<CR>
  endif

endfunction
