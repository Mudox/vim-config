let g:this_meta.site = 'https://github.com/Rykka/colorv.vim.git'

" NOTE: the dict bellow will be passed to command 'PlugInstall'
" as the 2nd argument to install this plugin.
let g:this_meta.vimplug_cmd_dict = {}

function g:this_meta.config()
  " due to it's time consuming and sometimes disturbing,
  " use mapping(i.e. ,cap ,cnp ) to enable color auto preview.
  let g:colorv_preview_ftype = ''

endfunction
