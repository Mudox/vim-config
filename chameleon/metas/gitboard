" vim: filetype=vim foldmethod=marker fileformat=unix

let g:this_meta.site = 'git@github.com:mudox/nvim-git-board.git'

" NOTE: the dict bellow will be passed to command 'PlugInstall'
" as the 2nd argument to install this plugin.
let g:this_meta.vimplug_cmd_dict = {}

function g:this_meta.config()
  let repos = {
        \ 'awesome'      : '~/Git/awesome-config',
        \ 'chameleon'    : '~/Git/vim-config/plugged/chameleon',
        \ 'ctrlp-cmdhub' : '~/Git/vim-config/plugged/ctrlp_cmdhub',
        \ 'dot-files'    : '~/Git/dot-files',
        \ 'foldtext'     : '~/Git/vim-config/plugged/foldtext',
        \ 'fzf-cmdhub'   : '~/Git/fzf-cmdhub',
        \ 'gitboard'     : '~/Git/vim-config/plugged/git_board',
        \ 'kaleidoscope' : '~/Git/vim-config/plugged/kaleidoscope',
        \ 'omnimenu'     : '~/Git/vim-config/plugged/omnimenu',
        \ 'qpen'         : '~/Git/vim-config/plugged/qpen',
        \ 'site-output'  : '~/Sites/mudox.github.io',
        \ 'site-source'  : '~/Sites/mudox.github.io-source',
        \ 'snippets'     : '~/Git/vim-config/plugged/mysnippets',
        \ 'vim'          : '~/Git/vim-config',
        \ }

  " TODO: action argument is hard coded
  nnoremap <Space>g :<C-U>call GitBoard(repos, 'pull')<Cr>

endfunction
