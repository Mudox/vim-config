" vim: filetype=vim foldmethod=marker fileformat=unix

let g:this_meta.site = 'https://github.com/terryma/vim-multiple-cursors.git'

" NOTE: the dict bellow will be passed to command 'PlugInstall'
" as the 2nd argument to install this plugin.
let g:this_meta.vimplug_cmd_dict = {}

function g:this_meta.config()
  " default mapping conflicts with yank_ring.
  "if has('mac') || has('macunix')
  "let g:multi_cursor_start_key = 'ê'
  "let g:multi_cursor_next_key  = 'ê'
  "let g:multi_cursor_prev_key  = 'ë'
  "let g:multi_cursor_skip_key  = 'ì'
  "else
  "let g:multi_cursor_start_key = '<M-j>'
  "let g:multi_cursor_next_key  = '<M-j>'
  "let g:multi_cursor_prev_key  = '<M-k>'
  "let g:multi_cursor_skip_key  = '<M-l>'
  "endif
  " Called once right before you start selecting multiple cursors

  function! Multiple_cursors_before()
    call deoplete#disable()
  endfunction

  " Called once only when the multiple selection is canceled (default <Esc>)
  function! Multiple_cursors_after()
    call deoplete#enable()
  endfunction

endfunction
