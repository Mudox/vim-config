" vim: filetype=vim foldmethod=marker fileformat=unix

" Set Tile & Bundle Manager {{{1

call SetTitle('python mode')

call SetBundleManager('NeoBundle')

" }}}1

" Merge Configs {{{1

" TODO: put every sub-mode names you need into the list.
let s:sub_configs = [
      \ 'x_common',
      \ 'x_git',
      \ ]

call MergeConfigs(s:sub_configs)

" }}}1

" Bundles in Current Config {{{1

" TODO: put every meta nemas you need into the list.
let s:bundle_list = [
      \ 'dbgp'          ,
      \ 'indentguides'  ,
      \ 'indentline'    ,
      \ 'py_flake8'     ,
      \ 'py_fold'       ,
      \ 'py_interactive',
      \ 'py_pep8_indent',
      \ 'py_syntax'     ,
      \ 'rainbow_oblitum',
      \ 'syntastic'     ,
      \ ]

if has('unix')
  call add(s:bundle_list, 'ycm')
  call add(s:bundle_list, 'autoformat')
endif

call AddBundles(s:bundle_list)
" }}}1
