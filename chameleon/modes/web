" Bundles in Current Config {{{1

" TODO: put every meta nemas you need into the list.
let s:bundle_list = [
      \ 'syntastic'      ,
      \ 'rainbow_oblitum',
      \ ]

" javascript & css plugins.
let s:bundle_list = s:bundle_list + [
      \ 'rt_js'       ,
      \ 'js_libsyntax',
      \ 'css_syntax'  ,
      \ ]

" mardown related.
let s:bundle_list = s:bundle_list + [
      \ 'rt_markdown',
      \ 'rt_toml',
]

if has('unix')
  call add(s:bundle_list, 'ycm')
endif
call AddBundles(s:bundle_list)
