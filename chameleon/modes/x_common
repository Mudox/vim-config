      \ 'obsession'       ,
      \ 'qpen'            ,
      \ 'ag'              ,
      \ 'airline'         ,
      \ 'argwrap'         ,
      \ 'quickrun'        ,
      \ 'man'             ,
      \ 'promiscuous'     ,
      \ 'fzf'             ,
      \ 'confsyntax'      ,
      \ 'ctrlspace'       ,
      \ 'easyalign'       ,
      \ 'expandregion'    ,
      \ 'foldtext'        ,
      \ 'goyo'            ,
      \ 'indentline'      ,
      \ 'indentguides'    ,
      \ 'join'            ,
      \ 'multi_cursor'    ,
      \ 'nerdcommenter'   ,
      \ 'nerdtree'        ,
      \ 'nrrwrgn'         ,
