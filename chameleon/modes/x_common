" vim: filetype=vim foldmethod=marker fileformat=unix

" Merge Configs {{{1

let s:sub_configs = [
      \ 'x_ctrlp'    ,
      \ 'x_xolox'    ,
      \ 'x_motion'   ,
      \ 'x_database' ,
      \ 'x_color'    ,
      \ 'x_textobj'  ,
      \ 'x_ultisnips',
      \ ]

call MergeConfigs(s:sub_configs)

" }}}1

" Bundles in Current Config {{{1

let s:bundle_list = [
      \ 'neoterm'         ,
