" Bundles in Current Config {{{1

let s:all_colors = glob(g:rc_root . '/vimrc.d/bundles.d/vim_color_*', 1, 1)
let s:all_colors = map(s:all_colors, 'fnamemodify(v:val, ":t:r")')

let s:bundle_list = s:all_colors
let s:bundle_list = add(s:bundle_list, 'color_toy')

call AddBundles(s:bundle_list)
" }}}1