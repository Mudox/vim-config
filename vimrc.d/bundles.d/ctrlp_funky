" vim: filetype=vim foldmethod=marker fileformat=unix

let g:mdx_bundle.name = expand('<sfile>:p:t')

let g:mdx_bundle.site = 'https://github.com/tacahiroy/ctrlp-funky.git'


let g:mdx_bundle.neodict.name = g:mdx_bundle.name


function g:mdx_bundle.config() dict
  nnoremap <Space>f :<C-U>CtrlPFunky<CR>

  let g:ctrlp_funky_after_jump = {
        \ 'default' : 'zxzz',
        \ 'python'  : 'zO',
        \ 'cpp'     : 'zxzt',
        \ 'go'      : 'zz',
        \ 'vim'     : 'zxzz',
        \ }
endfunction
