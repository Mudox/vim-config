" vim: filetype=vim foldmethod=marker fileformat=unix

let g:mdx_bundle.name = expand('<sfile>:p:t')

let g:mdx_bundle.site = 'https://github.com/xolox/vim-easytags.git'


let g:mdx_bundle.neodict.name = g:mdx_bundle.name


function g:mdx_bundle.config() dict
  set updatetime=4000

  let g:easytags_updatetime_autodisable = 1
  let g:easytags_include_members = 1
  let g:easytags_by_filetype = '~/.easy_tags_by_file_type'
  highlight cMember gui=italic
  " highlight link cMember Special

  if has('unix') || has('win32unix')
    let g:easytags_resolve_links = 1
  endif
endfunction
