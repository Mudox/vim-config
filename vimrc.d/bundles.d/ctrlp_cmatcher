" vim: filetype=vim foldmethod=marker fileformat=unix

" name and site
let g:mdx_bundle.name = expand('<sfile>:p:t')
let g:mdx_bundle.site = 'https://github.com/JazzCore/ctrlp-cmatcher.git'

" extra settings for neobundle
let g:mdx_bundle.neodict.name = g:mdx_bundle.name
let g:mdx_bundle.neodict.build = { 
      \ 'unix'    : './install_linux.sh',
      \ 'windows' : 'install_windows.bat'
      \ }

function g:mdx_bundle.config() dict
  " TODO: your plugin configuration goes here.
  " currently can not compile ctrlp_cmather on windows.
  if has('unix')
    let g:ctrlp_match_func = {'match' : 'matcher#cmatch' }
  endif
endfunction
