" vim: filetype=vim foldmethod=marker fileformat=unix

let g:mdx_bundle.name = expand('<sfile>:p:t')

let g:mdx_bundle.site = 'https://github.com/glts/vim-textobj-comment.git'


let g:mdx_bundle.neodict.name = g:mdx_bundle.name
let g:mdx_bundle.neodict.lazy = 1
let g:mdx_bundle.neodict.autoload = { 'mappings' : ['<Plug>(textobj-comment-'] }

function g:mdx_bundle.config() dict
    let g:textobj_comment_no_default_key_mappings = 1
    xmap ax <Plug>(textobj-comment-a)
    omap ax <Plug>(textobj-comment-a)
    xmap ix <Plug>(textobj-comment-i)
    omap ix <Plug>(textobj-comment-i)
    xmap aX <Plug>(textobj-comment-big-a)
    omap aX <Plug>(textobj-comment-big-a)

endfunction