" vim: filetype=vim foldmethod=marker fileformat=unix

let g:mdx_bundle.name = expand('<sfile>:p:t')

let g:mdx_bundle.site = 'https://github.com/airblade/vim-gitgutter.git'


let g:mdx_bundle.neodict.name = g:mdx_bundle.name


function g:mdx_bundle.config() dict
    nnoremap \gg :<C-U>GitGutterToggle<CR>
    nnoremap <leader>ggn :GitGutterNextHunk<CR>
    nnoremap <leader>ggp :GitGutterPrevHunk<CR>
    let g:gitgutter_enabled = 0

endfunction