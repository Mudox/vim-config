" vim: filetype=vim foldmethod=marker fileformat=unix

let g:mdx_bundle.name = expand('<sfile>:p:t')

let g:mdx_bundle.site = 'https://github.com/Valloric/YouCompleteMe.git'


let g:mdx_bundle.neodict.name = g:mdx_bundle.name


function g:mdx_bundle.config() dict
    " white or black list
    "let g:ycm_filetype_blacklist                           = {
                "\ 'notes'    : 1,
                "\ 'markdown' : 1,
                "\ 'vimwiki'  : 1,
                "\ 'vim'      : 1,
                "\ 'unite'    : 1
                "\}

    let g:ycm_filetype_whitelist                            = {
                \ 'cpp'    : 1,
                \ 'c'      : 1,
                \ 'python' : 1,
                \ }

    let g:ycm_collect_identifiers_from_tags_files           = 1
    let g:ycm_collect_identifiers_from_comments_and_strings = 1
    let g:ycm_seed_identifiers_with_syntax                  = 1

    let g:ycm_complete_in_strings                           = 0
    let g:ycm_complete_in_comments                          = 0

    let g:ycm_max_diagnostics_to_display                    = 14
    let g:ycm_autoclose_preview_window_after_completion     = 1
    let g:ycm_autoclose_preview_window_after_insertion      = 1
    let g:ycm_global_ycm_extra_conf                         = g:vim_config_root . '/neobundle/youcompleteme/cpp/ycm/.ycm_extra_conf.py'
    let g:ycm_allow_changing_updatetime                     = 0
    let g:ycm_register_as_syntastic_checker                 = 1
    let g:ycm_key_list_select_completion                    = ['<Down>']
    let g:ycm_key_list_previous_completion                  = ['<Up>']

endfunction