" vim: filetype=vim foldmethod=marker fileformat=unix

let g:mdx_bundle.name = expand('<sfile>:p:t')

let g:mdx_bundle.site = 'https://github.com/Shougo/unite.vim.git'


let g:mdx_bundle.neodict.name = g:mdx_bundle.name


function g:mdx_bundle.config() dict
    nnoremap \mru :Unite -start-insert file_mru<CR>
    nnoremap \bm  :Unite -vertical bookmark<CR>
    nnoremap \mru :Unite -start-insert file_mru<CR>
    nnoremap \ub  :Unite -vertical bookmark<CR>
    " let g:unite_enable_start_inser = 1
    " let g:unite_split_rule = 'topleft'
    " let g:unite_enable_split_vertically

endfunction