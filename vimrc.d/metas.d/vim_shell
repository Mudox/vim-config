" vim: filetype=vim foldmethod=marker fileformat=unix

let g:mdx_bundle.name = expand('<sfile>:p:t')

let g:mdx_bundle.site = 'https://github.com/Shougo/vimshell.git'


let g:mdx_bundle.neodict.name = g:mdx_bundle.name
let g:mdx_bundle.neodict.lazy = 1
let g:mdx_bundle.neodict.autoload = {
            \   'commands' : [
            \       {
            \       'name'     : 'VimShell',
            \       'complete' : 'customlist,vimshell#complete'
            \       },
            \       'VimShellExecute',
            \       'VimShellInteractive',
            \       'VimShellTerminal',
            \       'VimShellPop'
            \   ],
            \   'mappings' : [ '<Plug>(vimshell_switch)' ]
            \ }

function g:mdx_bundle.config() dict
    nnoremap <leader><leader>s :VimProcBang<Space>

endfunction