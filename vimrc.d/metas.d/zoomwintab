" vim: filetype=vim foldmethod=marker fileformat=unix

let g:mdx_bundle.name = expand('<sfile>:p:t')

let g:mdx_bundle.site = 'https://github.com/troydm/zoomwintab.vim.git'


let g:mdx_bundle.neodict.name = g:mdx_bundle.name


function g:mdx_bundle.config() dict
    let g:zoomwintab_remap = 0 " no mapping to <C-W>o and <C-W><C-O>
    " use <A-O/o> instead.
    nnoremap ï :ZoomWinTabToggle<CR>
    nnoremap Ï :ZoomWinTabToggle<CR>

endfunction