" vim: filetype=vim foldmethod=marker fileformat=unix

let g:mdx_bundle.name = expand('<sfile>:p:t')

let g:mdx_bundle.site = 'https://github.com/davidhalter/jedi-vim.git'


let g:mdx_bundle.neodict.name = g:mdx_bundle.name
let g:mdx_bundle.neodict.lazy = 1
let g:mdx_bundle.neodict.autoload = { 'filetypes' : [ 'python' ] }

function g:mdx_bundle.config() dict
    let g:jedi#pydoc                    = "<leader>k"
    let g:jedi#popup_select_first       = 0
    let g:jedi#auto_vim_configuration   = 0
    let g:jedi#show_function_definition = 0

endfunction