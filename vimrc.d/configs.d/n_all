" vim: filetype=vim foldmethod=marker fileformat=unix

let g:mdx_bundle_manager = 'NeoBundle'

let s:bundles = glob(g:rc_root . '/vimrc.d/bundles.d/*', 1, 1)
let s:bundles = map(s:bundles, 'fnamemodify(v:val, ":t:r")')

if !has('unix')
    call filter(s:bundles, 'v:val != "ycm"')
    call filter(s:bundles, 'v:val != "autoforamt"')
endif

let g:mdx_bundles_to_register = s:bundles
